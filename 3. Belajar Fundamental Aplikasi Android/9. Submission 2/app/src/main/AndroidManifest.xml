<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icongithub"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubUser"
        tools:targetApi="31">
        <activity
            android:name=".ui.misc.SplashScreenActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.settheme.SetThemeActivity"
            android:exported="false"
            android:label="Set Theme" />
        <activity
            android:name=".ui.favoriteuser.FavoriteUserActivity"
            android:exported="false"
            android:label="Starred User" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false">

        </activity>
        <activity
            android:name=".ui.detail.DetailUserActivity"
            android:label="Detail" />
    </application>

</manifest>